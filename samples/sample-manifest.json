    "Marbles": {
        "backend_first": {
            "Package": "backend",
            "MaxActivations": 1,
            "Parameters": {
                "Files": {
                    "/tmp/defg.txt": "foo",
                    "/tmp/jkl.mno": "bar"
                },
                "Env": {
                    "IS_FIRST": "true",
                    "SEAL_KEY": "{{ hex .Marblerun.SealKey }}",
                    "TEST_SECRET_SYMMETRIC_KEY": "{{ raw .Secrets.symmetric_key_shared }}",
                    "TEST_SECRET_CERT": "{{ pem .Secrets.cert_shared.Cert }}",
                    "TEST_SECRET_PRIVATE_CERT": "{{ pem .Secrets.cert_private.Cert }}"
                },
                "Argv": [
                    "--first",
                    "serve"
                ]
            },
            "TLS": [
                "web"
            ],
            "Roles": [
                "cert-reader",
                "key-reader"
            ]
        },
        "backend_other": {
            "Package": "backend",
            "Parameters": {
                "Env": {
                    "SEAL_KEY": "{{ hex .Marblerun.SealKey }}",
                    "TEST_SECRET_CERT": "{{ pem .Secrets.cert_shared.Cert }}",
                    "TEST_SECRET_PRIVATE_CERT": "{{ pem .Secrets.cert_private.Cert }}"
                },
                "Argv": [
                    "serve"
                ]
            },
            "TLS": [
                "web", "anotherWeb"
            ],
            "Roles": [
                "cert-reader"
            ]
        },
        "frontend": {
            "Package": "frontend",
            "Parameters": {
                "Env": {
                    "SEAL_KEY": "{{ hex .Marblerun.SealKey }}"
                }
            }
        }
